									"  \"properties\": {",
									"    \"id\": { \"type\":\"integer\" } ,",
									"    \"required\": [\"id\"]",
									"    }",
									" }",
									"",
									"pm.test('makes a valid worker', function() {",
									"    pm.response.to.have.status(201)",
									"    pm.expect(tv4.validate(pm.response.json(), schema)).to.be.true",
