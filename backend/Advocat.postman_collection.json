									"pm.test(\"get single worker\",function (){",
									"    pm.response.to.be.ok;",
									"    pm.response.to.be.json;",
									"    let response = pm.response.json()",
									"    delete response[\"created\"]",
									"    pm.expect (response).to.deep.equal(",
									"    {",
									"        _id: pm.environment.get(\"WorkerID\"),",
									"        name: \"name\",",
									"        address: \"addy\",",
									"        phone: \"phone\",",
									"        email: \"email\",",
									"        __v: 0",
									"    })",
